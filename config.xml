<widget xmlns     = "http://www.w3.org/ns/widgets"
         xmlns:gap = "http://phonegap.com/ns/1.0"
	id        = "com.phonegap.mjn"
        version   = "2">
    <name>MJN</name>

    <description>
	  MJN App
	    <author email="satish1388@gmail.com" href="">
		Satish Kumar Yadav
	    </author>

    </description>

    
       <content src="index.html" />
 <gap:platform name="ios" />
<gap:platform name="android" />
<gap:platform name="blackberry" />
<gap:platform name="winphone" />

<!--All-->
<preference name="phonegap-version" value="2.9.0" />
<preference name="orientation" value="portrait" />
<preference name="fullscreen" value="false" />

<!--IOS-->
<preference name="target-device" value="universal" />
<preference name="ios-statusbarstyle" value="black-opaque" />
<preference name="detect-data-types" value="true" />
<preference name="exit-on-suspend" value="true" />

<!--Android-->
<preference name="android-minSdkVersion" value="7" />
<preference name="android-maxSdkVersion" value="17" />
<preference name="android-targetSdkVersion" value="1" />
<preference name="android-installLocation" value="auto" />
<preference name="android-windowSoftInputMode" value="stateVisible|adjustResize" />
<preference name="splash-screen-duration" value="10000"/>
<preference name="loadUrlTimeoutValue" value="800000" />
<preference name="load-url-timeout" value="800000" />
<preference name="loadingDialog" value="MJN, Please wait...." />
<preference name="loadingPageDialog" value="MJN, Please wait...." />
<preference name="errorUrl" value="file:///android_asset/www/error.html" />
     
    
<preference name="BackgroundColor" value="0xff0000ff"/>
<icon src="mjnicon.png" />

<!--IOS-->
<icon src="mjnicon.png" gap:platform="ios" width="57" height="57" />
<icon src="mjnicon.png" gap:platform="ios" width="72" height="72" />
<icon src="mjnicon.png" gap:platform="ios" width="114" height="114" />

<!-- retina iPad support: PhoneGap 2.5.0+ only -->
<icon src="mjnicon.png" gap:platform="ios" width="144" height="144" />

<!--Android-->
<icon src="mjnicon.png" gap:platform="android" gap:density="ldpi" />
<icon src="mjnicon.png" gap:platform="android" gap:density="mdpi" />
<icon src="mjnicon.png" gap:platform="android" gap:density="hdpi" />
<icon src="mjnicon.png" gap:platform="android" gap:density="xhdpi" />

<!--blackberry-->
<icon src="mjnicon.png" gap:platform="blackberry" />
<icon src="mjnicon.png" gap:platform="blackberry" gap:state="hover"/>
<feature id="blackberry.app">
      <param name="orientation" value="portrait" />
    </feature>

    <feature id="blackberry.bbm.platform" />
    <feature id="blackberry.invoke" />
    <feature id="blackberry.invoke.card" />
    <feature id="blackberry.ui.cover" />
    <feature id="blackberry.ui.dialog" />
    <feature id="blackberry.ui.toast" />

   


<!--winphone-->
<icon src="mjnicon.png" gap:platform="winphone" />
<icon src="mjnicon.png" gap:platform="winphone" gap:role="background" />

 <!-- Define app splash screen for each platform. -->
    <gap:splash src="splash.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="splash.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="splash.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="splash.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="splash.png"         gap:platform="blackberry" />
    <gap:splash src="splash.png"    gap:platform="ios"     width="320" height="480" />
    <gap:splash src="splash.png" gap:platform="ios"     width="640" height="960" />
    <gap:splash src="splash.png"      gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="splash.png"     gap:platform="ios"     width="1024" height="768" />
    <gap:splash src="splash.png" gap:platform="winphone" />



<feature name="debug-server" required="true">
   <param name="domain" value="http://debug.custom.com"/>
   <param name="MJN" value="123456789"/>
</feature> 
<preference name="permissions" value="none"/>

<feature name="http://api.phonegap.com/1.0/battery"/>
<feature name="http://api.phonegap.com/1.0/camera"/>
<feature name="http://api.phonegap.com/1.0/contacts"/>
<feature name="http://api.phonegap.com/1.0/file"/>
<feature name="http://api.phonegap.com/1.0/geolocation"/>
<feature name="http://api.phonegap.com/1.0/media"/>
<feature name="http://api.phonegap.com/1.0/network"/>
<feature name="http://api.phonegap.com/1.0/notification"/>

  <feature name="App">
      <param name="android-package" value="org.apache.cordova.App"/>
    </feature>
    <feature name="Geolocation">
      <param name="android-package" value="org.apache.cordova.GeoBroker"/>
    </feature>
    <feature name="Device">
      <param name="android-package" value="org.apache.cordova.Device"/>
    </feature>
  <feature name="Accelerometer">
      <param name="android-package" value="org.apache.cordova.AccelListener"/>
    </feature>
    <feature name="Compass">
      <param name="android-package" value="org.apache.cordova.CompassListener"/>
    </feature>
    <feature name="Media">
      <param name="android-package" value="org.apache.cordova.AudioHandler"/>
    </feature>
    <feature name="Camera">
      <param name="android-package" value="org.apache.cordova.CameraLauncher"/>
    </feature>
    <feature name="Contacts">
      <param name="android-package" value="org.apache.cordova.ContactManager"/>
    </feature>
    <feature name="FileTransfer">
      <param name="android-package" value="org.apache.cordova.FileTransfer"/>
    </feature>
    <feature name="Capture">
      <param name="android-package" value="org.apache.cordova.Capture"/>
    </feature>
    <feature name="Battery">
      <param name="android-package" value="org.apache.cordova.BatteryListener"/>
    </feature>   
    <feature name="File">
      <param name="android-package" value="org.apache.cordova.FileUtils"/>
    </feature>
    <feature name="NetworkStatus">
      <param name="android-package" value="org.apache.cordova.NetworkManager"/>
    </feature>
    <feature name="Notification">
      <param name="android-package" value="org.apache.cordova.Notification"/>
    </feature>
    <feature name="Storage">
      <param name="android-package" value="org.apache.cordova.Storage"/>
    </feature>
    <feature name="SplashScreen">
      <param name="android-package" value="org.apache.cordova.SplashScreen"/>
    </feature>
    <feature name="Echo">
      <param name="android-package" value="org.apache.cordova.Echo"/>
    </feature>
    <feature name="Globalization">
      <param name="android-package" value="org.apache.cordova.Globalization"/>
    </feature>
    <feature name="InAppBrowser">
      <param name="android-package" value="org.apache.cordova.InAppBrowser"/>
    </feature> 
    
 <access origin="*" />
 <access origin="http://phonegap.com" subdomains="true" />  

</widget>
